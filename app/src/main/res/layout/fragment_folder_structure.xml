<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="?android:windowBackground"
        android:gravity="center_vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/linearLayout3"
            android:layout_toStartOf="@+id/linearLayout3"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="4dp"
            android:singleLine="true"
            android:text="@string/project"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="?android:textColorPrimary"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/txt_project_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_add_dependencies"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="4dp"
                android:foreground="?attr/selectableItemBackground"
                app:srcCompat="@drawable/ic_add_white_24dp" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_refresh"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="4dp"
                android:foreground="?attr/selectableItemBackground"
                app:srcCompat="@drawable/ic_refresh_white_24dp" />


            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_collapse"
                android:layout_width="24dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="4dp"
                android:foreground="?attr/selectableItemBackground"
                app:srcCompat="@drawable/ic_fullscreen_exit_white_24dp" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_expand_all"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="4dp"
                android:foreground="?attr/selectableItemBackground"
                app:srcCompat="@drawable/ic_fullscreen_white_24dp" />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="2dp">

    </RelativeLayout>


</LinearLayout>


